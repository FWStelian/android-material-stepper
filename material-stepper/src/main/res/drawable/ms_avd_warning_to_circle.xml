<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ms_vd_warning">

    <target android:name="circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="0"
                android:propertyName="fillAlpha"
                android:valueFrom="0"
                android:valueTo="1" />
        </aapt:attr>
    </target>

    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <set>

                <objectAnimator
                    android:duration="@integer/ms_default_error_tab_animation_duration"
                    android:propertyName="scaleX"
                    android:valueFrom="@integer/ms_circle_start_scale"
                    android:valueTo="1" />

                <objectAnimator
                    android:duration="@integer/ms_default_error_tab_animation_duration"
                    android:propertyName="scaleY"
                    android:valueFrom="@integer/ms_circle_start_scale"
                    android:valueTo="1" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="container">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/ms_default_error_tab_animation_duration"
                android:propertyName="translateY"
                android:valueFrom="@integer/ms_warning_end_translate_y"
                android:valueTo="0" />
        </aapt:attr>
    </target>

</animated-vector>